<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" debug="false">

    <property name="log.base" value="${log.run.path}"/>
    <property name="log.error" value="${log.error.path}"/>
    <property name="app.name" value="spring-boot"/>

    <property name="pattern"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%C.java:%L] - %msg%n"/>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="utf-8">
            <pattern>${pattern}</pattern>
            <outputPatternAsHeader>false</outputPatternAsHeader>
        </encoder>
    </appender>
    <appender name="log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.base}/${app.name}.run.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.base}/${app.name}.log.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>
        <encoder charset="UTF-8">
            <pattern>${pattern}</pattern>
            <outputPatternAsHeader>false</outputPatternAsHeader>
        </encoder>
    </appender>
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.error}/${app.name}.error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.error}/${app.name}.error.log.%d{yyyyMMdd}</fileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>error</level>
        </filter>
        <encoder charset="UTF-8">
            <pattern>${pattern}</pattern>
            <outputPatternAsHeader>false</outputPatternAsHeader>
        </encoder>
    </appender>
    <logger name="com.sctx" level="info" additivity="false">
        <appender-ref ref="log"/>
        <appender-ref ref="error"/>
        <appender-ref ref="stdout"/>
    </logger>
    <root level="info">
        <appender-ref ref="error"/>
        <appender-ref ref="log"/>
        <appender-ref ref="stdout"/>
    </root>
    <!--<include resource="org/springframework/boot/logging/logback/base.xml" />-->
    <jmxConfigurator />
</configuration>